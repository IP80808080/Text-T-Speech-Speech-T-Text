<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboardtwo"
    tools:context=".MainActivity" >

    <androidx.cardview.widget.CardView
        android:id="@+id/querry"
        android:layout_width="380dp"
        android:layout_height="260dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:elevation="0dp"
        app:cardBackgroundColor="#1EFFFFFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/que"
                android:layout_width="340dp"
                android:layout_height="220dp"
                android:elevation="0dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <at.markushi.ui.CircleButton
                        android:id="@+id/umic_stt1"
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:backgroundTint="#FAFAFA"
                        android:src="@drawable/new_mic"
                        android:tint="#000000"
                        app:cb_color="#FFFBFB"
                        app:cb_pressedRingWidth="3dip"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.673"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.956"
                        tools:src="@drawable/new_mic" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/uhear1"
                        android:layout_width="58dp"
                        android:layout_height="59dp"
                        android:backgroundTint="#FAFAFA"
                        android:src="@drawable/new_sound"
                        android:tint="#000000"
                        app:cb_color="#FFFBFB"
                        app:cb_pressedRingWidth="3dip"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.943"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.956"
                        tools:src="@drawable/new_sound" />

                    <EditText
                        android:id="@+id/tque"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFCFC"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.047"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.082" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>